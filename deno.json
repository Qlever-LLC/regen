{
	"version": "0.0.1",
	"exclude": [".svelte-kit", "node_modules", ".vite"],
	"tasks": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"lint": {
		"rules": {
			"tags": []
		}
	},
	"imports": {
		"crypto": "node:crypto"
	},
	"nodeModulesDir": "auto",
	"compilerOptions": {
		"checkJs": true,
		"strict": true,
		"lib": ["dom", "esnext"]
	},
	"unstable": ["sloppy-imports"]
}
