{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug SvelteKit Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["dev"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug tests",
      "type": "node",
      "request": "launch",
      "program": "deno",
      "args": ["test", "-A"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
